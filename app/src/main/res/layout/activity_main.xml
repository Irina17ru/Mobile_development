<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="60dp"
    tools:context=".MainActivity">

<Button
    android:id="@+id/forecast"
    android:onClick="gotoWeatherForecast"
    android:text="@string/forecast"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp" />
<Button
    android:id="@+id/warm_city"
    android:onClick="gotoWarmCity"
    android:text="@string/warm_city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp" />
<Button
    android:id="@+id/closest_city"
    android:onClick="gotoFindClosestCity"
    android:text="@string/closest_city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp" />
</LinearLayout>